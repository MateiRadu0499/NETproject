@model BCPredictMLML.Model.ModelInput
@{
    ViewData["Title"] = "Predict";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>BDefender Prediction</h1>

<hr />

@if (ViewBag.Result != null)
{
    string result = "";
    string prediction = @ViewBag.Result.Prediction;
    if (prediction.Equals("1"))
    {
        result = "True";
    }
    else if (prediction.Equals("0"))
    {
        result = "False";
    }
    <div class="row">
        <div class="col-md-6">
            <h4>Prediction:@ViewBag.Result.Prediction</h4>
        </div>
    </div>
    <hr />
}

