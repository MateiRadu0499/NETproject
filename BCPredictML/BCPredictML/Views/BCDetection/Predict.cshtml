                <div class="form-group col-md-4">
                    <label asp-for="Col7" class="custom-control-label"></label>
                    <input asp-for="Col7" class="form-control" />
                    <span asp-validation-for="Col7" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="Col8" class="custom-control-label"></label>
