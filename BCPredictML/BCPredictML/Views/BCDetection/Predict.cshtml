                    <span asp-validation-for="Col1" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="Col2" class="custom-control-label"></label>
                    <input asp-for="Col2" class="form-control" />
                    <span asp-validation-for="Col2" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="Col3" class="custom-control-label"></label>
                    <input asp-for="Col3" class="form-control" />
                    <span asp-validation-for="Col3" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
